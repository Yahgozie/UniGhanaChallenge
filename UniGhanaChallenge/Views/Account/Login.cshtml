@model Login

@{
    ViewData["Title"] = "Log in";
}

<div id="logreg-forms">    
    <form asp-controller="Account" asp-action="Login" method="post" role="form">        
        <input asp-for="Email" placeholder="Email..." type="text" class="mb-1 form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Password" placeholder="Password..." type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <button type="submit" class="btn btn-secondary form-control"><i class="fas fa-sign-in-alt"></i>Sign in</button>

        <a class="btn btn-primary text-white form-control mt-2" asp-action="Register"><i class="fas fa-user-plus"></i> Register as a new user</a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}